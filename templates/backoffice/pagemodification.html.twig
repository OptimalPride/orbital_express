<form id="page_modif">
	<label>Numero de page</label>
	<input type="number"  min="1" name="page_number" value="{{page.page_number}}"><br>

	<label>Scenario</label>
	<textarea  rows="10" cols="50" name="story" maxlength="1000">{{page.story}}</textarea><br>

	<label>Page finale?</label>
	<select name="ending">
		<option {% if ending == "" %}selected="selected"{% endif %} >non</option>
		<option {% if ending == "success" %}selected="selected"{% endif %}>success</option>
		<option {% if ending == "fail" %}selected="selected"{% endif %} >fail</option></select>
{% if ending == "" %}
	<fieldset>
		<legend>Choix 1</legend>

		<label>Personnage</label>
		<input type="text" name="crew1" maxlength="20" value="{{choices[0].crew}}">

		<label>Reponse</label>
		<textarea rows="3" cols="30" name="response1" maxlength="200">{{choices[0].response}}</textarea>

		<label>Vers la page :</label>
		<input type="number"  min="1" name="id_landing_page1" value="{% for key in pages %}{% if key['id_page'] == choices[0].id_landing_page %}{{key['page_number']}}{% endif %}{% endfor %}">

		<input type="hidden" name="id_choice1" value="{{choices[0].id_choice}}">
	</fieldset>

	<fieldset>
		<legend>Choix 2</legend>

		<label>Personnage</label>
		<input type="text" name="crew2" maxlength="20" value="{{choices[1].crew}}">

		<label>Reponse</label>
		<textarea rows="3" cols="30" name="response2" maxlength="200">{{choices[1].response}}</textarea>

		<label>Vers la page :</label>
		<input type="number"  min="1" name="id_landing_page2" value="{% for key in pages %}{% if key['id_page'] == choices[1].id_landing_page %}{{key['page_number']}}{% endif %}{% endfor %}">

		<input type="hidden" name="id_choice2" value="{{choices[1].id_choice}}">
	</fieldset>

	<fieldset>
		<legend>Choix 3</legend>

		<label>Personnage</label>
		<input type="text" name="crew3" maxlength="20" value="{{choices[2].crew}}">

		<label>Reponse</label>
		<textarea rows="3" cols="30" name="response3" maxlength="200">{{choices[2].response}}</textarea>

		<label>Vers la page :</label>
		<input type="number"  min="1" name="id_landing_page3" value="{% for key in pages %}{% if key['id_page'] == choices[2].id_landing_page %}{{key['page_number']}}{% endif %}{% endfor %}">
		<input type="hidden" name="id_choice3" value="{{choices[2].id_choice}}">
	</fieldset>
{% endif %}

	<input type="submit" value="Modifier">
</form>

<div id="form_message"></div>

