

<h2>Gestion des pages de l'aventure {{ adventure.id_adventure }}</h2>

<table border="1">
	<tr>
		<th>Numero de page</th>
		<th>Pages associ√©es</th>
		<th>action</th>
	</tr>
	{% for key in page|sort %}
		<tr>
				<td>{{ key["page_number"] }}</td>
				<td>
				{% if key["ending"] == NULL %}
				{% for choice in choices %}
					{% if key["id_page"] == choice["id_current_page"] %} - {{choice["id_landing_page"]}}{% endif %}
				{% endfor %} - 
				{% else %}
					{{key["ending"]}}
				{% endif %}
				</td>
				<td>
			  <a href="{{ path('deletepage', {'id_adventure' : adventure.id_adventure,'id_page' : key.id_page}) }}"><img src="{{ asset('img/delete.png') }}"></a>
			  <div id="{{key.id_page}}" class="pageedit"><img src="{{ asset('img/edit.png') }}"></a>
				</td>
		</tr>
	{% endfor %}
</table>

